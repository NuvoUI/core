{
  "name": "@nuvoui/core",
  "version": "1.1.3",
  "description": "NuvoUI is a human-friendly SCSS framework designed for simplicity, and modern responsive designs.",
  "main": "dist/nuvoui.css",
  "module": "src/styles/index.scss",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "vite build",
    "docs:dev": "vite --config vite.config.docs.mjs",
    "docs:build": "vite build --config vite.config.docs.mjs",
    "docs:preview": "vite preview --config vite.config.docs.mjs",
    "prepare": "node build.js && npm run build",
    "lint": "stylelint \"src/**/*.scss\"",
    "format": "prettier --write \"src/**/*.{scss,js,json}\"",
    "clean": "rimraf dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NuvoUI/core.git"
  },
  "keywords": [
    "scss",
    "css",
    "framework",
    "nuvoui",
    "ui-library",
    "design-system",
    "responsive",
    "animations",
    "frontend",
    "modern-ui",
    "web-development",
    "responsive-design",
    "developer-friendly",
    "mixins"
  ],
  "author": {
    "name": "AALA IT Solutions",
    "url": "https://aalasolutions.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/NuvoUI/core/issues"
  },
  "homepage": "https://nuvoui.io/",
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "cssnano": "^7.0.6",
    "glob": "^11.0.0",
    "postcss": "^8.4.49",
    "postcss-cli": "^11.0.0",
    "postcss-import": "^16.1.0",
    "postcss-nested": "^7.0.2",
    "prettier": "^3.3.3",
    "sass": "^1.81.0",
    "stylelint": "^16.10.0",
    "stylelint-config-standard-scss": "^13.1.0",
    "vite": "^5.4.11",
    "vite-plugin-html-inject": "^1.1.2",
    "vite-plugin-static-copy": "^2.1.0"
  },
  "peerDependencies": {
    "sass": "^1.x"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}

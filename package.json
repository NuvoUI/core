    "postcss": "^8.4.49",
    "postcss-cli": "^11.0.0",
    "postcss-import": "^16.1.0",
    "postcss-nested": "^7.0.2",
    "sass": "^1.81.0",
    "vite": "^5.4.11"
  },
  "peerDependencies": {
    "sass": "^1.x"
  },
  "engines": {
    "node": ">=14.0.0"
  }
